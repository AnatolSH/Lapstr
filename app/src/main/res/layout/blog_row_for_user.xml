<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outline">

        <ImageView
            android:id="@+id/awko88"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_name88"
            android:text="Name"
            android:padding="15dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/awko88"
            android:layout_toEndOf="@+id/awko88"
            android:textStyle="bold"
            android:layout_above="@+id/media_layout" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_title99"
            android:padding="15dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/post_name88"
            android:layout_toEndOf="@+id/post_name88"
            android:textStyle="bold"
            android:text="CountVideo"
            android:layout_above="@+id/media_layout" />

        <LinearLayout
            android:id="@+id/media_layout88"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/awko88"
            android:orientation="vertical">


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>