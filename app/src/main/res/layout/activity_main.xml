    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blog_list2"
        android:clipChildren="false"
        app:reverseLayout="false"
        android:paddingTop="5dp"
        android:paddingBottom="53dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignParentTop="true"
        android:clipToPadding="false">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/nav_bar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <ImageButton
            app:srcCompat="@mipmap/ic_home_white_36dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:background="?attr/colorPrimary"
            android:layout_width="81dp"
            android:padding="7dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="77dp"
            app:srcCompat="@mipmap/ic_add_box_white_36dp"
            android:id="@+id/imageButton3"
            android:scaleType="fitCenter"
            android:background="@color/colorPrimary"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButton2"
            android:layout_toEndOf="@+id/imageButton2"
            android:padding="7dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_photo_camera_white_36dp"
            android:id="@+id/imageButton4"
            android:scaleType="fitCenter"
            android:background="@color/colorPrimary"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="7dp" />

        <ImageButton
            android:layout_width="71dp"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_account_box_white_36dp"
            android:id="@+id/imageButton5"
            android:scaleType="fitCenter"
            android:background="@color/colorPrimary"
            android:layout_gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButton4"
            android:layout_toEndOf="@+id/imageButton4"
            android:padding="7dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_exit_to_app_white_36dp"
            android:id="@+id/imageButton6"
            android:scaleType="fitCenter"
            android:background="@color/colorPrimary"
            android:layout_toRightOf="@+id/imageButton5"
            android:layout_toEndOf="@+id/imageButton5"
            android:layout_gravity="bottom"
            android:padding="7dp" />

    </RelativeLayout>

